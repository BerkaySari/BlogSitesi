@using Domain.Model.Comments
@{
    ViewBag.Title = "AdminCommentTitle";
}

@{List<Comment> listComment = (List<Comment>) ViewData["Comments"];}

<div class="table-responsive">
    <table class="table table-hover" style="margin-top: 10px;">
        <tr>
            <td><b><u>Kullanıcı Adı</u></b></td>
            <td><b><u>Tarih</u></b></td>
            <td><b><u>Yorum</u></b></td>
            <td><b><u>Sil</u></b></td>
        </tr>

        @foreach (var item in listComment)
        {
         <tr>
            <td>
                @item.UserName
            </td>
            <td>
                @item.Date
            </td>
            <td>
                @item.CommentText
            </td>
            <td>
                    @Html.ActionLink("Sil", "AdminCommentDelete", new {id = @item.Id})
            </td>
         </tr>
        }
    </table>
</div>